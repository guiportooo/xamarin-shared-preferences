<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PreferencesPoc"
             x:Class="PreferencesPoc.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label x:Name="labelGet" Text="DeviceId: 0" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
        <Entry x:Name="entryGet" WidthRequest="100"
           HorizontalOptions="CenterAndExpand"
           VerticalOptions="CenterAndExpand" />
        <Button Text="Get" Clicked="OnGet"></Button>

        <Entry x:Name="entrySet"  WidthRequest="100" 
           HorizontalOptions="CenterAndExpand"
           VerticalOptions="CenterAndExpand" />
        <Button Text="Set" Clicked="OnSet"></Button>
    </StackLayout>

</ContentPage>
